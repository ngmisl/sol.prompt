			ElementMapping:       regexp.MustCompile(`^\s*mapping\s*\([^)]+\)\s*(\w+)`),
			ElementReceive:       regexp.MustCompile(`^\s*receive\s*\(\s*\)\s*external\s+payable`),
			ElementFallback:      regexp.MustCompile(`^\s*fallback\s*\([^)]*\)\s*external`),
