			ElementContract:      regexp.MustCompile(`^\s*(abstract\s+)?(contract|interface|library)\s+(\w+)(\s+is\s+([^{]+))?`),
			ElementFunction:      regexp.MustCompile(`^\s*function\s+(\w+)\s*\([^)]*\)([^{;]*)[{;]`),
